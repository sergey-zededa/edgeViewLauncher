{
  "name": "edgeview-launcher",
  "version": "0.1.1",
  "description": "EdgeView Launcher - Electron Edition",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "prebuild": "node scripts/generate-build-info.js",
    "build": "npm run build:mac",
    "build:mac": "npm run build:frontend && npm run build:backend:mac && electron-builder --mac --arm64",
    "build:frontend": "cd frontend && npm run build",
    "build:backend:mac": "GOOS=darwin GOARCH=arm64 go build -o edgeview-backend http-server.go app.go",
    "build:backend:windows": "GOOS=windows GOARCH=amd64 go build -o edgeview-backend.exe http-server.go app.go",
    "build:backend:linux": "GOOS=linux GOARCH=amd64 go build -o edgeview-backend http-server.go app.go",
    "build:windows": "npm run build:frontend && npm run build:backend:windows && electron-builder --win --x64",
    "build:linux": "npm run build:frontend && npm run build:backend:linux && electron-builder --linux --x64",
    "test": "cd frontend && npm test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.edgeview.launcher",
    "productName": "EdgeView Launcher",
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraResources": [
        {
          "from": "edgeview-backend.exe",
          "to": "edgeview-backend.exe"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extraResources": [
        {
          "from": "edgeview-backend",
          "to": "edgeview-backend"
        }
      ]
    },
    "linux": {
      "icon": "icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "extraResources": [
        {
          "from": "edgeview-backend",
          "to": "edgeview-backend"
        }
      ],
      "category": "Development"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "backendClient.js",
      "build-info.json",
      "entitlements.mac.plist",
      "frontend/dist/**/*",
      "icon.icns",
      "icon.ico",
      "icon.png"
    ],
    "directories": {
      "output": "dist-electron"
    }
  }
}